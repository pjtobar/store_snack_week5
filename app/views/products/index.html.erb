
<div class="container">
  <% if user_signed_in? %>
  <div class="container" align = "right">
    <% if current_user and current_user.has_role? :client %>
      <%= link_to "Cart", detail_path(current_user.id), method: :get, class: "btn btn-info" %>
    <% end %>
    <% if current_user and current_user.has_role? :admin %>
      <%= link_to "New Product", new_product_path, class: "btn btn-info" %>
    <% end %>
  <%end%>
  </div>

  <h2 align='center'>Welcome to store</h2>
  <div class="container" align = "center">
    <%= form_for @search, url: products_path, as: :search,  method: :get do |f| %>
       <%= f.select :sort, [["Name","name ASC"], ["Likes","likes_count ASC"]] %>
       <%= f.select :category_id, @categories.collect {|p| [ p.name, p.id ] }, { include_blank: true } %>
       <%= f.text_field :name %>
       <%= link_to products_path, class: 'btn btn-warning' do %>
        Clear
       <% end %>
       <%= f.submit "Search", class: 'btn btn-success' %>
    <% end %>
  </div>
  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">#</th>
        <th scope="col">SKU</th>
        <th scope="col">Name</th>
        <th scope="col">Category</th>
        <th scope="col">Price</th>
        <th scope="col">Stock</th>
        <% if user_signed_in? %>
          <th scope="col">Show</th>
          <!-- Repetition much? I told you about this in week 5! -->
        <% if current_user and current_user.has_role? :client %>
          <th scope="col">Like</th>
          <th scope="col">Num Likes</th>
        <% end %>
          <% if current_user and current_user.has_role? :admin %>
            <th>Options</th>
          <% end %>
        <%end%>
      </tr>
    </thead>
    <tbody>
      <% @product.each_with_index do |product, index|%>
      <tr>
        <th scope="row"> <%= index+1%> </th>
        <td> <%= product.sku%> </td>
        <td> <%= product.name%> </td>
        <td> <%= product.category_name%> </td>
        <td> <%= product.price%> </td>
        <td> <%= product.stock%> </td>
        <% if user_signed_in? %>
          <td><%= link_to "Show Product", product_path(product.id), class: "btn btn-success" %></td>
          <% if current_user and current_user.has_role? :client %>
            <td>
              <%= form_with model: @like, method: "post" do |f| %>
                <%= f.hidden_field :product_id, value: product.id %>
                <%= f.submit "LIKE", class: "btn btn-info" %>
              <% end %>
            </td>
            <td><%= product.likes.size %></td>
          <% end %>
          <% if current_user and current_user.has_role? :admin %>
            <td>
              <%= link_to 'edit', edit_product_path(product.id), class: "btn btn-info" %>
              <%= link_to 'Delete', product_path(product), method: :delete, class: "btn btn-warning", data: {confirm: "Are you sure?"} %>
            </td>
          <% end %>
        <%end%>

      </tr>
      <% end %>
    </tbody>
  </table>
  <%== pagy_bootstrap_nav(@pagy) %>
</div>
